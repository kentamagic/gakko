        %input#mce-EMAIL.required.email{:value => "", :name => "EMAIL", :placeholder => "Enter your email for Gakko 2013 updates!"}
        #mce-responses.clear
          .response#mce-error-response{:style => "display: none;"}
          .response#mce-success-response{:style => "display: none;"}
        .clear
